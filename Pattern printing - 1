#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    int m=(n+1)/2;
    for(int i=1;i<=n;i++)//traversing the rows
    {
        for(int j=1;j<=n;j++)//traversing the columns
        {
            if(i==j)//when row == column
            {
                if(i<m)//again check the condition when i variable <than my mid print the n value subtracted from i and +1
                printf("%d ",n-i+1);
                else
                printf("%d ",i);//when i > mid print the ith row
            }
            else if(i+j==n+1)//when the ith row and the jth column == n+1 
            {
                if(i<m)//when i < m print ith row
                printf("%d ",i);
                else
                printf("%d ",j);//when greater the mid print the column value since for every iteration j value starts from 1
            }
            else
            printf("  ");//when above conditions fails print the spaces to get the pattern
        }
        printf("\n");//when j loop fails it moves to next line
    }
    return 0;
}
